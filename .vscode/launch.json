{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": "Launch Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build client",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Clients/NetCoreClient/bin/Debug/netcoreapp2.1/NetCoreClient.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Clients/NetCoreClient",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Launch Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build server",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Server/MessagingServer/bin/Debug/netcoreapp2.1/MessagingServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Server/MessagingServer",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ,]
}